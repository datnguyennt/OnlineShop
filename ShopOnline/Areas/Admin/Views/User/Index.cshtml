@model IEnumerable<Models.EF.User>

@{
    ViewBag.Title = "User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách User}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">User</strong>
            <p>@Html.ActionLink("Thêm mới một User", "Create", "User", new { @class = "btn btn-primary" })</p>
        </div>
        <div class="card-body">
            <table class="table table-bordered" id="table_user"  >
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>@Html.DisplayNameFor(model => model.Username)</th>
                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Sửa | Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1;}
                    @{ foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Username</td>
                                <td>@item.LastName</td>
                                <td>@item.FirstName</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.UserID">Sửa | </a>
                                    <a href="/Admin/User/Delete/@item.UserID">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

